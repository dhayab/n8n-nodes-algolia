{
	"compilerOptions": {
		"baseUrl": "./",
		"strict": true,
		"isolatedModules": true,
		"noEmit": true,
		"moduleResolution": "node",
		"target": "esnext",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"paths": {
			"@helpers": ["./helpers"]
		},
	},
	"include": [
		"credentials/**/*",
		"helpers/**/*",
		"nodes/**/*",
		"package.json",
	]
}
